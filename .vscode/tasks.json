{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile Production",
			"type": "shell",
			"command": "npx webpack watch --mode production",
			"problemMatcher": ["$ts-webpack", "$tslint-webpack"],
			"group": "build"
		},
		{
			"label": "Compile Development",
			"type": "shell",
			"command": "npx webpack watch --mode development",
			"problemMatcher": ["$ts-webpack", "$tslint-webpack"],
			"group": "build"
		},
		{
			"label": "Start server",
			"type": "shell",
			"command": "http-server",
			"group": "build"
		}
	]
}
